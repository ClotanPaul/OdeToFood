@model IEnumerable<OdeToFood.Data.Models.RestaurantReview>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>
<br>
<p>
    @Html.ActionLink("Create New", "Create", new {restaurantId = Model.First().RestaurantId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        if (item.IsApproved)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Review)
                </td>
                @if(User.Identity.GetUserId() == item.UserId)
                {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
                }
            </tr>
            
        }
    }

</table>
