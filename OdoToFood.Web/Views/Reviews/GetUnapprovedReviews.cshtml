@model IEnumerable<OdeToFood.Data.Models.RestaurantReview>

@{
    ViewBag.Title = "Pending Reviews";
}

<h2>Pending Reviews</h2>

<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.Name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Review)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.Restaurant.Name)
        </th>
        <td>
            @Html.ActionLink("Approve Review", "Approve", new { id = item.Id }) |
            @Html.ActionLink("Delete Review", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
